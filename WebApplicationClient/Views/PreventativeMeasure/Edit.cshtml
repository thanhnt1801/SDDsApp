@model WebApplicationClient.DTOs.PreventativeMeasureDTO

@{
    ViewData["Title"] = "Update";
}

<div class="row" style="display: flex;
  justify-content: center;
  align-items: center;">

    <h1 class="btn-pink mb-5">Update <i class="fa-solid fa-pen-to-square"></i></h1>
    <hr />
    <div class="col-md-10">
        <form asp-action="Edit" class="border p-5 shadow-sm  rounded" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Disease name</label>
                <input asp-for="Title" type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea id="summernote" asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status">State</label>
                <select asp-for="Status" class="form-control">
                    <option selected>Choose...</option>
                    <option asp-for="Status"> True</option>
                    <option asp-for="Status">False</option>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <input asp-for="Images" type="file" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Edit" class="btn btn-pink" />
            </div>
            <div>
                <a asp-action="Index" class="btn border border-success px-5"><i class="fa-regular fa-circle-left" style="color:green"></i></a>
            </div>
        </form>
    </div>

</div>


<style>
    input[type=file]::file-selector-button {
        margin-right: 20px;
        border: none;
        background: #FF9696;
        padding: 10px 20px;
        border-radius: 10px;
        color: #fff;
        cursor: pointer;
        transition: background .2s ease-in-out;
    }

        input[type=file]::file-selector-button:hover {
            background: #FF9798;
        }
</style>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
