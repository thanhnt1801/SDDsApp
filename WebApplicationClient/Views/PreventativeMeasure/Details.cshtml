@model WebApplicationClient.Models.PreventativeMeasure

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">  <a asp-action="Edit" asp-route-id="@Model.Id" class="btn border border-success"><i class="fas fa-edit" style="color:green"></i></a> Preventative Measure Details</h3>
        </div>
        <div class="card-body">
            <div class="row mt-4 justify-content-center">
                @*<div class="col-sm-12 pb-3">
                <label for="exampleAccount">PreventativeMeasure ID</label>
                <input class="form-control" id="exampleAccount" placeholder="XXXXXXXXXXXXXXXX" type="text" asp-for="@Model.Id" disabled>
                </div>*@
                <div class="col-sm-12 pb-3">
                    <label for="exampleFirst">PreventativeMeasure Title: </label>
                    <h2>@Model.Title</h2>
                </div>

                <div class="col-sm-12 pb-3">
                    <label for="exampleCity">PreventativeMeasure Description</label>
                    <p>@Model.Description</p>
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Created Date</label>
                    <p>@Model.CreatedAt</p>
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Updated Date</label>
                    <p>@Model.UpdatedAt</p>
                </div>
                <div class="col-sm-10 pb-3">
                    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
                        <div class="carousel-inner">
                              @foreach (var item in Model.PreventativeMeasureImages)
                            {
                            <div class="carousel-item @(item == Model.PreventativeMeasureImages.First() ? "active" : "")">
                            <img class="d-block w-100" src="@item.ImageUrl" alt="@item.Id">
                            </div>

                            }
                         

                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <a asp-action="Index" asp-controller="Disease" class="btn border border-success px-5"><i class="fa-regular fa-circle-left" style="color:green"></i></a>

            </div>
        </div>
    </div>
</div>
