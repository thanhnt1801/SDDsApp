<style>
    .hr7 {
        overflow: visible;
        height: 30px;
        border-style: solid;
        border-color: #FF4069;
        border-width: 1px 0 0 0;
        border-radius: 20px;
        color: #FF4069;
        font-size: 0.7em;
        text-align: center;
    }

        .hr7:before {
            display: block;
            content: "";
            height: 30px;
            margin-top: -31px;
            border-style: solid;
            border-color: #FF4069;
            border-width: 0 0 1px 0;
            border-radius: 20px;
        }

        .hr7:after {
            background: #F7F7F7;
            content: "\002665";
            display: inline-block;
            font-size: 1.7em;
            position: relative;
            top: -.6em;
        }

</style>

