                    @*<input class="form-control" id="exampleFirst" type="text" asp-for="@Model.Name" disabled> *@
                    <h2>@Model.Name</h2>
                </div>
                <div class="col-sm-12 pb-3">
                    <label for="exampleCity">Disease Description</label>@* <textarea class="form-control" disabled asp-for="@Model.Description" rows="5"></textarea>*@
                    <p>@Model.Description</p>
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Created Date</label>
                    @*<input class="form-control" id="exampleZip1" type="date" asp-for="@Model.CreatedAt" disabled>*@
                    <p>@Model.CreatedAt</p>
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Updated Date</label>
                    @*<input class="form-control" id="exampleZip1" type="date" asp-for="@Model.UpdatedAt" disabled>*@
                    <p>@Model.UpdatedAt</p>
