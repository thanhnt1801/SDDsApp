@model WebApplicationClient.Models.Disease
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/detailsdisease.css" type="text/css" />

<div class="container">
    <div class="card card-outline-secondary">
