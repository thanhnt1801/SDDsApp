@model WebApplicationClient.Models.Disease
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/detailsdisease.css" type="text/css" />

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
             
            <h3 class="mb-0">
                @if (Context.Session.GetString("role") == "ADMIN")
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn border border-success"><i class="fas fa-edit" style="color:green"></i></a>
                }
                Disease Details</h3>
               
        </div>
        <div class="card-body">
            <div class="row mt-4">
                <div class="col-sm-12 pb-3">
                    <label for="exampleAccount">Disease ID</label>
                    <input class="form-control" id="exampleAccount" placeholder="XXXXXXXXXXXXXXXX" type="text" asp-for="@Model.Id" disabled>
                </div>
                <div class="col-sm-12 pb-3">
                    <label for="exampleFirst">Disease Title</label>
                    <input class="form-control" id="exampleFirst" type="text" asp-for="@Model.Name" disabled> 
                </div>
                <div class="col-sm-12 pb-3">
                    <label for="image" >Disease Images</label>
                    <div>
                        <img class="zoom rounded" id="image" src="@Model.Image" width="400" height="400">
                    </div>
                    @*<img src="@Url.Content("~/Images/" + Model.Image)" alt="IMAGES" />*@
                </div>
               
                <div class="col-sm-12 pb-3">
                    <label for="exampleCity">Disease Description</label> <textarea class="form-control" disabled asp-for="@Model.Description" rows="5"></textarea>
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Created Date</label>
                    <input class="form-control" id="exampleZip1" type="date" asp-for="@Model.CreatedAt" disabled>
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Updated Date</label>
                    <input class="form-control" id="exampleZip1" type="date" asp-for="@Model.UpdatedAt" disabled>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <a asp-action="Index" class="btn border border-success px-5"><i class="fa-regular fa-circle-left" style="color:green"></i></a>
                 
            </div>
        </div>
    </div>
</div>
