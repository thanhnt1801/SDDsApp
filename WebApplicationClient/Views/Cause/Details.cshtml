@model WebApplicationClient.Models.Cause

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">  <a asp-action="Edit" asp-route-id="@Model.Id" class="btn border border-success"><i class="fas fa-edit" style="color:green"></i></a> Pesticide Details</h3>
        </div>
        <div class="card-body">
            <div class="row mt-4 justify-content-center">
                @*<div class="col-sm-12 pb-3">
                    <label for="exampleAccount">Cause ID</label>
                    <input class="form-control" id="exampleAccount" placeholder="XXXXXXXXXXXXXXXX" type="text" asp-for="@Model.Id" disabled>
                </div>*@
                <div class="col-sm-12 pb-3">
                    <label for="exampleFirst">Cause Title: </label>
                    <h2>@Model.Title</h2>
                    @*<input class="form-control" id="exampleFirst" type="text" asp-for="@Model.Title" disabled>*@
                </div>
             
                <div class="col-sm-12 pb-3">
                    <label for="exampleCity">Cause Description</label> 
                    <p>@Model.Description</p>
                    @*<textarea class="form-control" rows="5" disabled asp-for="@Model.Description"></textarea>*@
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Created Date</label>
                    <p>@Model.CreatedAt</p>
                    @*<input class="form-control" id="exampleZip1" type="date" asp-for="@Model.CreatedAt" disabled>*@
                </div>
                <div class="col-sm-3 pb-3">
                    <label for="exampleZip1">Updated Date</label>
                    <p>@Model.UpdatedAt</p>
                    @*<input class="form-control" id="exampleZip1" type="date" asp-for="@Model.UpdatedAt" disabled>*@
                </div>
                <div class="col-sm-10 pb-3">
                    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
                        <div class="carousel-inner">
                            @foreach (var item in Model.CauseImages)
                            {
                                <div class="carousel-item @(item == Model.CauseImages.First() ? "active" : "")">
                                    <img class="d-block w-100" src="@item.ImageUrl" alt="@item.Id">
                                </div>
                                 
                            }
                            
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="">
                    <a asp-action="CauseImages" class="btn border border-success px-5" asp-route-id="@Model.Id">View all Images</a>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="justify-content-between">
                <a asp-action="Index" asp-controller="Disease"  class="btn border border-success px-5"><i class="fa-regular fa-circle-left" style="color:green"></i></a>

            </div>
        </div>
    </div>
</div>